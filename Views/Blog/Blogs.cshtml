@using doan.Models
@using PagedList.Mvc
@model PagedList.IPagedList<BaiViet>
@{
    ViewBag.Title = "Blogs";
}

<!-- Begin Li's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                <li class="active">Blogs</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- Begin Li's Main Blog Page Area -->
<div class="li-main-blog-page pt-60 pb-55">
    <div class="container">
        <div class="row">
            <!-- Begin Li's Main Content Area -->
            <div class="col-lg-12">
                <div class="row li-main-content">
                    @foreach (BaiViet i in Common.GetBlog())
                    {
                        <div class="col-lg-12">
                            <div class="li-blog-single-item pb-30">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="li-blog-banner">
                                            <a href="@Url.Action("BlogsContent","Blog",new { @MaBV = @i.maBV })"><img class="img-full" src="@i.hinhDD" alt="@i.tenBV"></a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="li-blog-content">
                                            <div class="li-blog-details">
                                                <h3 class="li-blog-heading pt-xs-25 pt-sm-25"><a href="@Url.Action("BlogsContent","Blog",new { @MaBV = @i.maBV })">@i.tenBV</a></h3>
                                                <div class="li-blog-meta">
                                                    <a class="author" href="#"><i class="fa fa-user"></i>@i.taiKhoan</a>
                                                    <a class="comment" href="#"><i class="fa fa-comment-o"></i>3</a>
                                                    <a class="post-time" href="#"><i class="fa fa-calendar"></i>@String.Format("{0:dd MM yyyy}", i.ngayDang)</a>
                                                </div>
                                                <p>@i.ndTomTat</p>
                                                <a class="read-more" href="@Url.Action("BlogsContent","Blog",new { @MaBV = @i.maBV })">Xem thêm...</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Begin Li's Pagination Area -->
                    <div class="col-lg-12">
                        <div class="li-paginatoin-area text-center pt-25">
                            <div class="row">
                                <div class="col-lg-12">
                                    <ul class="li-pagination-box">
                                        <li>
                                        @Html.PagedListPager(Model, page => Url.Action("Blogs", new { @page = page }))
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Li's Pagination End Here Area -->
                </div>
            </div>
            <!-- Li's Main Content Area End Here -->
        </div>
    </div>
</div>
<!-- Li's Main Blog Page Area End Here -->