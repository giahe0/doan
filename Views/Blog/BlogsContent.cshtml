@using doan.Models
@{
    ViewBag.Title = "BlogsContent";
    BaiViet blg = ViewData["Xembai"] as BaiViet;
}

<!-- Begin Li's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li>@Html.ActionLink("Trang Chủ","Index","Home")</li>
                <li class="active">@blg.maBV</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- Begin Li's Main Blog Page Area -->
<div class="li-main-blog-page pt-60 pb-55">
    <div class="container">
        <div class="row">
            <!-- Begin Li's Blog Sidebar Area -->
            <div class="col-lg-3 order-lg-1 order-2">
                <div class="li-blog-sidebar-wrapper">
                    <div class="li-blog-sidebar">
                        <h4 class="li-blog-sidebar-title">Bài viết khác</h4>
                        <ul class="li-blog-archive">
                            @foreach (BaiViet i in Common.GetBlog())
                            {
                            <li><a href="@Url.Action("BlogsContent","Blog",new { @MaBV = @i.maBV })">@i.tenBV</a></li>
                            }
                        </ul>
                    </div>
                    <div class="li-blog-sidebar">
                        <h4 class="li-blog-sidebar-title">Tags</h4>
                        <ul class="li-blog-tags">
                            <li><a>Gaming</a></li>
                            <li><a>Chromebook</a></li>
                            <li><a>HOT</a></li>
                            <li><a>New</a></li>
                            <li><a>Top</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Li's Blog Sidebar Area End Here -->
            <!-- Begin Li's Main Content Area -->
            <div class="col-lg-9 order-lg-2 order-1">
                <div class="row li-main-content">
                    <div class="col-lg-12">
                        <div class="li-blog-single-item pb-40">
                            <div class="li-blog-banner embed-responsive embed-responsive-16by9">
                                <iframe src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/300107209&amp;color=%23ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;show_teaser=true&amp;visual=true"></iframe>
                            </div>
                            <div class="li-blog-content">
                                <div class="li-blog-details">
                                    <h3 class="li-blog-heading pt-35"><a>@blg.tenBV</a></h3>
                                    <div class="li-blog-meta">
                                        <a class="author"><i class="fa fa-user"></i>@blg.taiKhoan</a>
                                        <a class="comment" href="#"><i class="fa fa-comment-o"></i> 3</a>
                                        <a class="post-time"><i class="fa fa-calendar"></i>@String.Format("{0:dd/MM/yyyy}", @blg.ngayDang)</a>
                                    </div>
                                    <p>@blg.ndTomTat</p>
                                    <!-- Begin Blog Blockquote Area -->
                                    <div class="li-blog-blockquote">
                                        <blockquote>
                                            <p>@blg.noiDung</p>
                                        </blockquote>
                                    </div>
                                    <!-- Blog Blockquote Area End Here -->
                                    <div class="li-tag-line">
                                        <h4>tag:</h4>
                                        <a href="#">@blg.loaiTin</a>
                                    </div>
                                    <div class="li-blog-sharing text-center pt-30">
                                        <h4>share this post:</h4>
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-pinterest"></i></a>
                                        <a href="#"><i class="fa fa-google-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Li's Main Content Area End Here -->
        </div>
    </div>
</div>
<!-- Li's Main Blog Page Area End Here -->
